  <body style="font-size:20px; padding:50px;">
        <header>     <% include ./partials/_header %> </header> </br></br>
    <h3 class="head2">Create TinyURL</h3>
    <section id="_parent">
        <div id="_child">
    <form action="/urls" method="POST">
      <div style="position:absolute; left:30%; top:50%;">
        <label for="longURL" class="label">Enter a URL:</label>
        <input  class="login" type="text" name="longURL" placeholder="http://" style="width: 300px; margin: 1em">
        <button style="position:relative; top:-3px;" id="_submit_btn" type="submit">Submit</button>
      </div>
    </form>
    <br/> 
    <a style="position:absolute; left:45%; margin-top: 25px;" class="index"  href="/urls">Back to to Index</a>
    </div>
    </section>
  </body>
